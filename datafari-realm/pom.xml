<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.francelabs</groupId>
	<artifactId>datafari-realm</artifactId>
	<packaging>jar</packaging>
	<version>2.0-SNAPSHOT</version>
	<name>Datafari Enterprise Search - Realm module</name>
	<parent>
		<groupId>com.francelabs.datafari</groupId>
		<artifactId>datafari</artifactId>
		<version>2.0-SNAPSHOT</version>
	</parent>
	<prerequisites>
		<!-- Force minimum Maven version -->
		<maven>3.0.5</maven>
	</prerequisites>
	<build>

		<!-- defaultGoal defined in the parent POM -->

		<plugins>
			<!-- Force JRE Java version 7 to be used instead of (default) version 
				5 -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.3</version>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
					<includes>
						<include>**/realm/*</include>
					</includes>
				</configuration>
				<executions>
					<!-- Run the compile goal at compile phase -->
					<execution>
						<id>compile</id>
						<phase>compile</phase>
						<goals>
							<goal>compile</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.6</version>
				<configuration>
					<includes>
						<include>**/realm/*</include>
					</includes>
					<outputDirectory>../tomcat/lib</outputDirectory>
				</configuration>
				<executions>
					<!-- Run the jar goal at package phase -->
					<execution>
						<id>jar</id>
						<phase>package</phase>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
